                <option value="ayaan">Ayaan</option>
                <option value="abuzar">Abuzar</option>
                <option value="subham">Subham</option>
            </select>
        </div>

        <button class="btn btn-primary m-3" onclick="createMainComment(this.parentNode.querySelector('#comment-data').value, this.parentNode.querySelector('#select-user').value, 'c')">Submit</button>
    </div>

